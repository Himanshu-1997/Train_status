					<h3 class="card-header bg-primary text-white" style="text-align:center">Passenger Current Status Enquiry</h3>
					<div class="card-block container">
<form method="post" action="/info/pnrstatus">
	<div class="form-group row">
	<div class="col-md-2">
	<label>Enter PNR Number</label>
	</div>
	<div class="col-md-2">
	<input name="pnr_number" placeholder="PNR Number"/>
	</div>
	</div>
	<input class="btn btn-primary" type="submit" value="Enter"/>
	<button class="btn btn-primary" onclick="window.location.href='/info/pnrstatus'">Clear</button>
</form>
</div>
</div>
</div>
<% if(station && station1 && doj && pass && tname) { %>
	<h1>From station Name:- <%= station %></h1>
	<h1>To station Name:- <%= station1 %></h1>
	<h1>Date of Journey:- <%= doj %></h1>
	<h1>Total Passengers:- <%= pass %></h1>
	<h1>Train Name:- <%= tname %></h1>
	<%}%>
