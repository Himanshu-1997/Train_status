	<link rel="stylesheet" href="/css/style.css">
	<!-- endbuild -->
    <title>Indian Railway</title>
</head>
<body>
	<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/info/index"><img src="../img/raillogo.png" height="35" width="41"></a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/info/index">Home</a></li>
      <li><a href="/info/pnrstatus">Pnr Status</a></li>
      <li><a href="/info/trainstatus">Train Status</a></li>
      <li><a href="/info/fareenquiry">Fare enquiry</a></li>
      <li><a href="/info/seatavailability">Seat Availability</a></li>
      <li class="active"><a href="/info/trainbetweenstation">Train between Stations</a></li>
    </ul>
	<ul class="nav navbar-nav navbar-right">
      <li><a href="/user/logout"><span class="glyphicon glyphicon-user"></span> Logout</a></li>
    </ul>
  </div>
</nav>
<div class="container">
<div class="col-sm-6 col-offset-2">
				<div class="card" style="padding:15px">
					<h3 class="card-header bg-primary text-white" style="text-align:center">Reserve Trains Between Stations</h3>
					<div class="card-block container">
<form method="post" action="/info/trainbetweenstation">
	<div class="form-group row">
	<div class="col-md-2">
	<label>Enter source station</label>
	</div>
	<div class="col-md-10">
	<input placeholder="Source Station Code" name="source" type="text"/>
	</div>
	</div>
	<div class="form-group row">
	<div class="col-md-2">
	<label>Enter destination station</label>
	</div>
	<div class="col-md-10">
	<input placeholder="Source Station Code" name="dest" type="text"/>
	</div>
	</div>
	<div class="form-group row">
	<div class="col-md-2">
	<label>Date</label>
	</div>
	<div class="col-md-10">
	<input name="date" type="date"/>
	</div>
	</div>
	<div class="form-group row">
	<div class="col-6">
	<input class="btn btn-primary" type="submit" value="Enter"/>
	</div>
	</div>
</form>
</div>
</div>
</div>
<div class="row">
<% if(trainname3 && trainnumbers && srcs && dests){%>
<table id="t01">
<tr>
<th>Train Names </th>
<th>Train Number </th>
<th>Source Station </th>
<th>Destination Station </th>
</tr>
<% for(var i=0;i<trainname3.length;i++) {%>
		<tr>
		<td><%= trainname3[i] %></td>
		<td><%= trainnumbers[i] %></td>
		<td><%= srcs[i] %></td>
		<td><%= dests[i] %></td>
		</tr>
		<%}%>
</table>
<br>
<br>
<br>
<br>
<%}%>
</div>
</div>
<script src="/bower_components/jquery/dist/jquery.js"></script>
    <!-- <script src="node_modules/tether/dist/js/tether.min.js"></script> -->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
	<script src="/js/main.js"></script>
</body>

</html>