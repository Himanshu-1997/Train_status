<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css">
	<link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.css">
    <!-- <link rel="stylesheet" href="css/bootstrap-social.css"> -->
	<link rel="stylesheet" href="/css/style.css">
	<!-- endbuild -->
    <title>Indian Railway</title>
</head>
<body>
	
	<header class="jumbotron">
        <div class="container">
            <div class="row row-header" style="text-align:center">
                <div>
					<div class="col-md-2 col-sm-2">
					<img src="../img/raillogo.png" class="img-fluid">
					</div>
					<div class="col-md-10">
                    <h1>Register</h1>
					</div>
                </div>
            </div>
        </div>
    </header>
	
	<div class="container">
	 <div class="row row-content">
	 <div class="col-md-6">
	<% if(errors) {%>
		<% for(var i=0;i<errors.length;i++) {%>
			<div class="alert alert-danger">
			<h4><%= errors[i].msg %></h4>
			</div>
			<%}%>
	<%}%>
		<form method="POST" action="/user/register">
  <div class="form-group row">
    <label class="col-md-2 form-group-label">Name:</label>
    <div class="col-md-8">
      <input name="name" type="text" placeholder="Name" class="form-control"/>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-md-2 form-group-label">Email Id:</label>
    <div class="col-md-8">
      <input name="email" type="text" placeholder="Email Address" class="form-control"/>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-md-2 form-group-label">Username:</label>
    <div class="col-md-8">
      <input name="username" type="text" placeholder="User Name" class="form-control"/>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-md-2 form-group-label">Password:</label>
    <div class="col-md-8">
      <input name="password" type="password" placeholder="Password" class="form-control"/>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-md-2 form-group-label">Confirm Password:</label>
    <div class="col-md-8">
      <input name="password2" type="password" placeholder="Re-enter Password" class="form-control"/>
    </div>
  </div>
<input type="submit" value="Submit" class="btn btn-primary"/>
	</form>
	</div>
	<div class="col-md-5">
		<img src="../img/registration.jpg">
	</div>
	</div>
	</div>
	<script src="/bower_components/jquery/dist/jquery.js"></script>
    <!-- <script src="node_modules/tether/dist/js/tether.min.js"></script> -->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
	<script src="/js/main.js"></script>
</body>
</html>